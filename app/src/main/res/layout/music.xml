<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:padding="5dp"
    tools:context=".MusicActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter The MusicId:-"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:inputType="number"
        android:id="@+id/musicid"
        android:textColor="#DD2C00"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter The SongName:-"
        android:textStyle="bold"
        android:textSize="20dp"
        android:inputType="text"
        android:id="@+id/songname"
        android:layout_marginTop="15dp"
        android:textColor="#DD2C00"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter The ArtistName:-"
        android:textStyle="bold"
        android:textSize="20dp"
        android:inputType="text"
        android:id="@+id/artistname"
        android:layout_marginTop="15dp"
        android:textColor="#DD2C00"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter The MusicRating:-"
        android:textStyle="bold"
        android:textSize="20dp"
        android:inputType="text"
        android:id="@+id/musicrating"
        android:layout_marginTop="15dp"
        android:textColor="#DD2C00"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter The MusicVerdict:-"
        android:textStyle="bold"
        android:textSize="20dp"
        android:inputType="text"
        android:id="@+id/musicverdict"
        android:layout_marginTop="15dp"
        android:textColor="#DD2C00"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter The MusicReleaseDate:-"
        android:textStyle="bold"
        android:textSize="20dp"
        android:inputType="datetime"
        android:id="@+id/musicreleasedate"
        android:layout_marginTop="15dp"
        android:textColor="#DD2C00"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Add"
          android:layout_marginEnd="3dp"
          android:textStyle="bold"
          android:id="@+id/btn1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:textStyle="bold"
            android:layout_marginEnd="3dp"
            android:id="@+id/btn2"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:textStyle="bold"
            android:layout_marginEnd="3dp"
            android:id="@+id/btn3"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Read"
            android:textStyle="bold"
            android:id="@+id/btn4"/>

    </LinearLayout>
    
    <ListView
        android:layout_marginTop="10dp"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:id="@+id/listview1"/>

</LinearLayout>